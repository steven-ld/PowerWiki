{
  "name": "powerwiki",
  "version": "1.0.0",
  "description": "A modern Git-based Markdown wiki system with auto-sync, syntax highlighting, and Feishu-style UI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:en": "LANG=en node server.js",
    "start:zh": "LANG=zh-CN node server.js",
    "docker:build": "docker build -t powerwiki .",
    "docker:run": "docker run -d -p 3150:3150 --name powerwiki -v $(pwd)/config.json:/app/config.json:ro powerwiki",
    "docker:stop": "docker stop powerwiki && docker rm powerwiki",
    "docker:logs": "docker logs -f powerwiki"
  },
  "keywords": [
    "wiki",
    "markdown",
    "git",
    "documentation",
    "knowledge-base",
    "feishu",
    "static-site",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/PowerWiki.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/PowerWiki/issues"
  },
  "homepage": "https://github.com/your-username/PowerWiki#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "highlight.js": "^11.9.0",
    "marked": "^9.1.6",
    "pdfjs-dist": "^5.4.449",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
